<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spiderindia.departmentsofhighway.NewActivities.CulvertFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/screen_bg_hash_color">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_common">
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/culvetKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="culvet key id"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/culvet_key_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:inputType="number"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chainage"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/chainage_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Culvert type"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/culvert_typ_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:visibility="gone"/>

                        <Spinner
                            android:id="@+id/culvert_typ_spnr"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />

<!--
                        <Spinner
                            android:id="@+id/type_spnr_maint"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />
-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Culvert Number"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/culvert_num_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Construction year"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/constru_yr_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="DD/MM/YYYY"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No of rows"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"/>


                            <EditText
                                android:id="@+id/no_of_row_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >


                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pipes Dia (M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"
                                />


                            <EditText
                                android:id="@+id/pipe_dia_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vent Width (M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"/>


                            <EditText
                                android:id="@+id/vent_width_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vent Height (M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"
                                />


                            <EditText
                                android:id="@+id/vent_height_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"/>
                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No Of Span"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"/>


                            <EditText
                                android:id="@+id/no_of_span_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="culvert Length(M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"
                                />


                            <EditText
                                android:id="@+id/culvert_length_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/condition_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:visibility="gone"/>

                        <Spinner
                            android:id="@+id/condition_spnr"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />


                    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <com.spiderindia.departmentsofhighway.Utils.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attach Culvet Photo"
        android:textColor="#9f9e9e"
        android:textAllCaps="true"
        android:textSize="@dimen/common_header_txt_s"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/culvet_img"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:src="@mipmap/place_holder"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/choosePhoto"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                android:layout_marginTop="2dp"
                android:background="@color/hash_color_bttn"
                android:textColor="@color/hash_color_txt"
                android:textAllCaps="false"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/common_header_min_H"
        android:orientation="vertical">

        <Button
            android:id="@+id/setCulvetLocation"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Set Current location"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/common_header_txt_s"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corner_for_login_bttn"
            android:layout_marginRight="4dp"/>


        <EditText
            android:id="@+id/culvet_geoLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/rounded_corner_with_bottom_shadow"
            android:inputType="number"
            android:minHeight="@dimen/edt_txt_min_h"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="false"
            android:textSize="@dimen/text_hint_size_capture_screen" />
    </LinearLayout>


</LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/nxn_prev_lay_mar_t"
                        android:gravity="center">

                        <Button
                            android:id="@+id/submit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/bottom_text_s"
                            android:textAllCaps="true"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/bttn_common_color"/>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/process_Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
