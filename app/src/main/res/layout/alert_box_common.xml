<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/alert_box_w"
    android:layout_height="@dimen/alert_box_h"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/main_layOUT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="40"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/header_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center">
            <TextView
                android:id="@+id/header_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit Application?"
                android:textSize="@dimen/alert_box_txt_sz"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="top">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_common_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/content_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout Your Account"
                android:textSize="@dimen/alert_box_content_txt_sz"
                android:textColor="#696969"
                android:gravity="center"
                android:layout_marginBottom="@dimen/alert_box_mar_btm"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10.5"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/yes_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:background="@color/app_common_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="@dimen/alert_box_content_txt_sz"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:background="#EAE8E9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="@dimen/alert_box_content_txt_sz"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
