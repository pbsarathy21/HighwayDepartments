<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentss.InventaryFormThreeFrgmnt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/screen_bg_hash_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Left Foot Path(M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"/>


                            <EditText
                                android:id="@+id/left_foot_path_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >


                            <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RIGHT FOOT PATH(M)"
                                android:textColor="@color/txt_common_color"
                                android:textAllCaps="true"
                                android:textSize="@dimen/common_header_txt_s"
                                />


                            <EditText
                                android:id="@+id/right_foot_path_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_with_bottom_shadow"
                                android:minHeight="@dimen/edt_txt_min_h"
                                android:singleLine="false"
                                android:textSize="@dimen/text_hint_size_capture_screen"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"/>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Super Structure Type"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <Spinner
                            android:id="@+id/super_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Slab Thickness(CM)"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <EditText
                            android:id="@+id/slab_thickness_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:minHeight="@dimen/edt_txt_min_h"
                            android:singleLine="false"
                            android:textSize="@dimen/text_hint_size_capture_screen"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bearing type"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <Spinner
                            android:id="@+id/bearing_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PARAPET / HAND RAIL TYPE"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <Spinner
                            android:id="@+id/parapet_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wearing Coat type"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <Spinner
                            android:id="@+id/wearing_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_header_mar_t">

                        <com.spiderindia.departmentsofhighway.Utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pier foundation"
                            android:textColor="@color/txt_common_color"
                            android:textAllCaps="true"
                            android:textSize="@dimen/common_header_txt_s"/>


                        <Spinner
                            android:id="@+id/pier_foundation_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/rounded_corner_with_bottom_shadow"
                            android:gravity="center|start"
                            android:popupBackground="@color/white"
                            android:theme="@android:style/Theme.Holo.Light" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/common_header_min_H"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/nxn_prev_lay_mar_t"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/previous_bttn"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:text="Previous"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bottom_text_s"
                                android:textAllCaps="true"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:background="@color/bttn_common_color"/>
                            <Button
                                android:id="@+id/nxt_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:text="Next"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bottom_text_s"
                                android:textAllCaps="true"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:background="@color/bttn_common_color"/>
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/process_Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</RelativeLayout>
