<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_connec_warning_w"
    android:layout_height="@dimen/popup_connec_warning_h"
    android:background="@drawable/rounded_corner_for_layout_bg"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/warning_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NetWork Error, Check your Mobile date or Wifi"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"
           android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />


        <Button
            android:id="@+id/okay_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_for_bttn"
            android:text="Okay"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/warning_msg"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
