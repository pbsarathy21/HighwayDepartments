<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/popup_singout_width"
    android:layout_height="@dimen/popup_singout_height"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            >
            <ImageView
                android:layout_marginTop="@dimen/popup_singout_img_mar_top"
                android:layout_width="@dimen/popup_singout_img_width"
                android:layout_height="@dimen/popup_singout_img_width"
                android:src="@mipmap/lock_signout"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:weightSum="10"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Are you sure you want to signout?"
                    android:textColor="#565555"
                    android:textSize="@dimen/popup_singout_txt"
                    android:layout_gravity="bottom"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click yes to sign out!"
                    android:textColor="#565555"
                    android:textSize="@dimen/popup_singout_txt"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/popup_singout_txt_mar_btm"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/app_common_color"
                android:gravity="center"
                android:id="@+id/signOut_ll"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="@dimen/popup_singout_txt"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#EAE8E9"
                android:gravity="center"
                android:id="@+id/cancel_ll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="@dimen/popup_singout_txt"
                    android:textColor="#565555"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>